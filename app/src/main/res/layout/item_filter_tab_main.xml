<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.depayse.domain.entity.Content" />

        <variable
            name="eventHolder"
            type="com.vside.app.util.common.ContentItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->eventHolder.onContentItemClickListener(item)}"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_filter_tab_main_img"
            android:layout_width="120dp"
            android:layout_height="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="14dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                bind:imgUrl="@{item.coverImgUrl}"
                tools:src="@drawable/img_home_test"
                android:contentDescription="@string/book_image" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_bookmark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/bookmark"
            bind:activated="@{item.isBookmark()}"
            android:onClick="@{()->eventHolder.onContentItemBookmarkClickListener(item)}"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_item_filter_tab_main_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            bind:text="@{item.title}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_item_filter_tab_main_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="14dp"
            tools:text="넌 누구에게도 상처를 주지 않으
려 하지 그리고 그럴 수도 없을
거야. 넌 내게 무해한 사람이구나."
            style="@style/TextAppearance.AppCompat.SM_M"
            android:maxLines="3"
            android:textColor="@color/g900" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/tv_item_filter_tab_main_content"
            app:layout_constraintEnd_toEndOf="@id/tv_item_filter_tab_main_content"
            bind:filterKeywordLayoutManager="@{item.keywords.size() > 3 ? 2 : 1}"
            tools:listitem="@layout/item_filter_tab_main_keyword"
            bind:dino_itemSpace="@{`4dp`}"
            bind:dino_items="@{item.keywords}"
            bind:dino_itemLayout="@{@layout/item_filter_tab_main_keyword}"
            tools:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            tools:orientation="horizontal"
            tools:itemCount="3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>