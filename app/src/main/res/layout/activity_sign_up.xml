<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vside.app.feature.auth.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sign_up"
        tools:context=".feature.auth.SignUpActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_sign_up_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tv_sign_up_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_logo"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_sign_up_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/cv_sign_up_nickname"
                    android:contentDescription="@string/logo" />
                <ImageView
                    android:id="@+id/iv_sign_up_star"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toTopOf="@id/tv_sign_up_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_sign_up_title"
                    app:layout_constraintStart_toEndOf="@id/tv_sign_up_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/iv_sign_up_circle1"
                    android:layout_width="92dp"
                    android:layout_height="93dp"
                    android:src="@drawable/bg_sign_up_circle1"
                    app:layout_constraintBottom_toBottomOf="@id/cv_sign_up_nickname"
                    app:layout_constraintStart_toStartOf="@id/cv_sign_up_nickname"
                    android:layout_marginBottom="-23dp"
                    android:layout_marginStart="-27dp"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/iv_sign_up_circle2"
                    android:layout_width="72dp"
                    android:layout_height="73dp"
                    android:src="@drawable/bg_sign_up_circle2"
                    android:layout_marginTop="-31dp"
                    android:layout_marginEnd="-21dp"
                    app:layout_constraintEnd_toEndOf="@id/cv_sign_up_nickname"
                    app:layout_constraintTop_toTopOf="@id/cv_sign_up_nickname"
                    tools:ignore="ContentDescription" />
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_sign_up_nickname"
                    android:layout_width="252dp"
                    android:layout_height="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_sign_up_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_sign_up_guide"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:rippleColor="@android:color/transparent"
                    android:layout_marginTop="30dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="18dp">
                    <com.vside.app.feature.common.view.LockedEditText
                        android:id="@+id/et_sign_up_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_sign_up_nickname"
                        bind:bgColorAlpha="@{60}"
                        android:text="@={viewModel.nickname}"
                        android:inputType="text"
                        android:maxLines="1"
                        style="@style/TextAppearance.AppCompat.MD_R"
                        android:textColor="@color/white"
                        android:textColorHint="@color/g600"
                        android:textCursorDrawable="@drawable/img_nickname_cursor"
                        android:gravity="center"
                        android:hint="@string/sign_up_nickname_hint"
                        />
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/tv_sign_up_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cv_sign_up_nickname"
                    app:layout_constraintBottom_toTopOf="@id/tv_sign_up_login"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="21dp"
                    android:textColor="@color/color_sign_up_nickname_guidance"
                    android:text="@{viewModel.nicknameGuidance == null || viewModel.nicknameGuidance.empty ? `` : `*`+viewModel.nicknameGuidance}"
                    bind:activated="@{viewModel.isNicknameValidate()}"
                    tools:text="*이모티콘, 특수문자 불가"
                    style="@style/TextAppearance.AppCompat.XS_R"/>

                <TextView
                    android:id="@+id/tv_sign_up_login"
                    style="@style/TextAppearance.AppCompat.LG_M"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/color_bg_sign_up_btn"
                    android:gravity="center"
                    android:text="@string/sign_up_begin"
                    android:textColor="@color/color_text_sign_up_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:onClick="@{()->viewModel.onStartClick()}"
                    bind:activated="@{viewModel.isNicknameValidate()}"
                    tools:layout_editor_absoluteX="0dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>