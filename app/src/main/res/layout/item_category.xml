<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="item"
            type="com.vside.app.feature.filter.data.response.KeywordsGroupedByCategoryResponse.CategoryKeyword" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">
        <TextView
            android:id="@+id/tv_item_category_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:text="@{item.category.get(0)}"
            tools:text="분위기"
            style="@style/TextAppearance.AppCompat.MD_B"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            tools:listitem="@layout/item_keyword"
            bind:dino_itemLayout="@{@layout/item_keyword}"
            bind:dino_items="@{item.keywords}"
            app:layout_constraintTop_toBottomOf="@id/tv_item_category_category"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>