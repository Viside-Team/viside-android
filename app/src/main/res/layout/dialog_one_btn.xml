<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vside.app.feature.common.view.OneBtnDialogViewModel" />
        <import type="android.view.View"/>
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_two_btn_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_two_btn_dialog_contents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp"
                    android:paddingBottom="29dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/ll_two_btn_dialog_buttons">
                    <TextView
                        android:id="@+id/tv_two_btn_dialog_contents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginHorizontal="20dp"
                        android:text="@{viewModel.contents}"
                        tools:text="로그아웃을 하셔도 언제든지\n다시 돌아올 수 있어요!"
                        android:textColor="@color/g900"
                        style="@style/TextAppearance.AppCompat.MD_M"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        style="@style/TextAppearance.AppCompat.MD_M"
                        tools:text="로그아웃을 진행하시겠어요?"
                        android:textColor="@color/g500"
                        android:visibility="@{viewModel.subContents.empty || viewModel.subContents==null? View.GONE : View.VISIBLE}"
                        android:text="@{viewModel.subContents}"
                        android:gravity="center"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_two_btn_dialog_buttons"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/button_two_btn_dialog_left"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/white"
                        android:onClick="@{()->viewModel.onBtnClick()}"
                        android:text="@{viewModel.textBtn}"
                        tools:text="@string/confirm"
                        style="@style/TextAppearance.AppCompat.BASE_M"
                        android:textColor="@color/g700" />
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>