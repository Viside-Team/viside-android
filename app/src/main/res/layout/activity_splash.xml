<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.vside.app.R"/>
        <variable
            name="viewModel"
            type="com.vside.app.feature.SplashViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sign_up"
        tools:context=".feature.SplashActivity">
        <ImageView
            android:id="@+id/iv_splash_anim"
            android:layout_width="320dp"
            android:layout_height="320dp"
            tools:src="@drawable/ic_login_main"
            app:layout_constraintVertical_bias="0.458"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            bind:gifRaw="@{R.raw.splash}"
            android:contentDescription="@string/logo" />
        <TextView
            style="@style/TextAppearance.AppCompat.XL_EB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.18"
            android:text="@string/login_main"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="@id/iv_splash_anim"
            app:layout_constraintStart_toStartOf="@id/iv_splash_anim"
            app:layout_constraintBottom_toBottomOf="@id/iv_splash_anim" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>